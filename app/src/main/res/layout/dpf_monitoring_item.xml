<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--DataBinding을 이용하여 데이터를 실시간으로 감지 및 변경을 하기 위해서는 아래와 같이 세팅을 해주어야한다.-->
    <data>
        <variable
            name="DPF_MonitoringViewModel"
            type="com.example.kanbu.DPF_MonitoringViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/data_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@{DPF_MonitoringViewModel.data_state}"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/data_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{DPF_MonitoringViewModel.data_title}"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{DPF_MonitoringViewModel.data_data}"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/black"/>

    </LinearLayout>

    </LinearLayout>

</layout>